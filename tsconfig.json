{
  "include": ["src"],
  "compilerOptions": {
    "lib": [
      "es2018", "dom"
    ],
    "outDir": "dist",
    "types": [
      "node"
    ],
    "module": "commonjs",
    "target": "es2018",
    "sourceMap": true,
    "noImplicitAny": false,
    "allowJs": false,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": false,
    "suppressImplicitAnyIndexErrors": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true
  }
}